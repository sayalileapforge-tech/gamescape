{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2020",
      "lib": ["es2020"],
      "outDir": "lib",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["lib"]
  }
  